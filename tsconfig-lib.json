{
    "compilerOptions": {
      "target": "es5",
      "lib": [
        "es2015", "dom"
      ],
      "downlevelIteration": true,
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "react",
      "declaration": true,
      "outDir": "./lib",
      "declarationDir": "./lib",
      "sourceMap": true,
      "declarationMap": true,
    },
    "include": [
      "src/lib"
    ]
  }
  